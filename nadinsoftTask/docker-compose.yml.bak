      - ./alertmanager.yml:/etc/alertmanager/alertmanager.yml:ro
    command: ["--config.file=/etc/alertmanager/alertmanager.yml"]
    ports:
      - "9093:9093"
    restart: always
    networks: [appnet]

networks:
  appnet:
    driver: bridge
